<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/setting_sidemunubutton"
            android:layout_width="40dip"
            android:layout_height="50dip"
            android:layout_marginLeft="310dip"
            android:layout_marginTop="8dp"
            android:background="@drawable/sidemenubutton"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dip"
            android:background="@color/white"
            android:orientation="vertical" >

            <!-- 全圆角 -->

            <LinearLayout style="@style/wrap_layout" >

                <!-- 上圆角 -->

                <LinearLayout style="@style/top_layout" >

                    <TextView
                        style="@style/usertext"
                        android:text="机顶盒硬件版本" />

                    <TextView
                        android:id="@+id/hardware_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="1.0" />
                </LinearLayout>
                <!-- 分割线 -->

                <View style="@style/bg_line" />
				<!-- mid-->
                <LinearLayout style="@style/mid_layout" >
                    <TextView
                        style="@style/usertext"
                        android:text="机顶盒软件版本" />

                    <TextView
                        android:id="@+id/software_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="1.0" />
                </LinearLayout>
                <!-- 分割线 -->

                <View style="@style/bg_line" />
                
                <LinearLayout style="@style/mid_layout" >
                    <TextView
                        style="@style/usertext"
                        android:text="机顶盒总内存" />

                    <TextView
                        android:id="@+id/memory_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="1.0" />
                </LinearLayout>
                <!-- 分割线 -->

                <View style="@style/bg_line" />
                
                <LinearLayout style="@style/mid_layout" >
                    <TextView
                        style="@style/usertext"
                        android:text="机顶盒可用内存" />

                    <TextView
                        android:id="@+id/memory_availabe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="1.0" />
                </LinearLayout>
                <!-- 分割线 -->

                <View style="@style/bg_line" />
                
                <LinearLayout style="@style/mid_layout" >
                    <TextView
                        style="@style/usertext"
                        android:text="机顶盒mac" />

                    <TextView
                        android:id="@+id/mac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="1.0" />
                </LinearLayout>
                <!-- 分割线 -->

                <View style="@style/bg_line" />
                <!-- 下圆角 -->

                <LinearLayout
                    android:id="@+id/update_info_btn"
                    style="@style/bottom_layout" >

                    <TextView
                        style="@style/usertext"
                        android:text="检查更新" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/wrap_layout" >

                <LinearLayout
                    
                    style="@style/top_layout" >

                    <TextView
                        style="@style/usertext"
                        android:id="@+id/ad_resource_id"
                        android:text="广告资源ID" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

                <!-- 分割线 -->

                <View style="@style/bg_line" />
                <!-- 增加自动控制开关 -->

                <LinearLayout style="@style/bottom_layout" >

                    <TextView
                        style="@style/usertext"
                        android:text="AppVersion" />
                    <TextView
                        android:id="@+id/app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="1.0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>